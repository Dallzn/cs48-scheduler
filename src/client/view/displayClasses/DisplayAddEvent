		topPanel.add(textField_2);
		textField_2.setColumns(10);
		
		JTextPane txtpnEndDate = new JTextPane();
		txtpnEndDate.setText("End Date :");
		topPanel.add(txtpnEndDate);
		btnAddEvent.addActionListener(new ActionListener(){
